  <link rel="icon" href="/images/icon_app.png">

  <title>Shortify</title>
  <!-- My CSS Stylesheet -->
  <link rel="stylesheet" href="style.css">
  <link rel="stylesheet" href="dark.css">
  <link type="text/css" rel="stylesheet" href="src/dark.css">

  <script  src='./sweetalert2.min.js'></script>
  <script src="flatpickr.min.js"></script>

</head>

<body>
  
  <% if (title==='slug_in_use') { %>
   <div id=show-popup ></div>
  <% } else if (title==='expired') { %>
    <div id="expired"></div>
  <% } else if (title==='feedback') { %>
    <div id="feedback"></div>
  <% } else if (title==='urlshortify') { %>
    <div id="urlshortify"></div>
  <% } else if (title==='error') { %>
    <div id="error" class="<%= message%>" ></div>   
  <% } %>

  <header class="text-gray-400 bg-gray-900 body-font">

    <div class=" container mx-auto flex flex-wrap p-5 flex-col md:flex-row items-center">
      <a href="/" class="flex title-font font-medium items-center text-white mb-4 md:mb-0">
        <img src="/images/url-shorten.svg" alt="url-shorten" class="h-16">
      
        <span class="ml-3 text-4xl">Shortify</span>
      </a>
      <nav class="  md:ml-auto flex flex-wrap  float-right">
        <a class="mr-5 hover:text-white" href="about.html">How It Works</a>
        <a href="contact.html" class="mr-5 hover:text-white  ">Feedback</a>
      </nav>
      
    </div>
  </header>




  <!-- Forms Section  -->
  <section class="text-gray-400 bg-gray-900 body-font w-full">
    <h2 class="text-4xl font-semibold text-white capitalize text-center md:pt-6">Welcome Guest !</h2>
    <div class=" container px-5 py-24 mx-auto flex flex-wrap">

      <div class="lg:w-1/2 w-full mb-10 lg:mb-0 rounded-lg overflow-hidden">

        <section class=" max-w-4xl p-6 mx-auto bg-white rounded-md shadow-md dark:bg-gray-800">
          <!-- <h2 class="text-lg font-semibold text-gray-700 capitalize dark:text-white">Account settings</h2> -->
          <form action="/service" method="POST" autocomplete="off">
            <div class="grid grid-cols-1 gap-6 mt-4">
              <div>
                <label class="text-purple-700 dark:text-gray-200" for="original_url"> Enter a long URL to make a
                  ShortURL <label>

                    <input name="url" id="original_url" required type="url" placeholder="https://"
                      class="w-full block  px-4 py-2 mt-2  bg-white border border-gray-300 dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 focus:border-blue-500 dark:focus:border-blue-500 focus:outline-none focus:ring   text-green-500 transition duration-500 ease-in-out transform border-transparent rounded-lg bg-blueGray-100 focus:border-blueGray-500 focus:bg-white  focus:shadow-outline  ring-offset-current ring-offset-2">
              </div>


              <div>
                <label class="text-purple-700 dark:text-gray-200" for="Alias"> Customize your link</label>
                <input name="slug" id="Alias" type="text" placeholder="Alias"
                  class="block w-full px-4 py-2 mt-2 text-green-500 bg-white border border-gray-300 rounded-md dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 focus:border-blue-500 dark:focus:border-blue-500 focus:outline-none focus:ring">
              </div>

              <div>
                <label id="expiry-label" class="text-purple-700 dark:text-gray-200" for="Expiry_date">Expiry</label>
                <input name="expiry" id="Expiry_date"
                  class="block w-full px-4 py-2 mt-2 text-yellow-600 bg-white border border-gray-300 rounded-md dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 focus:border-blue-500 dark:focus:border-blue-500 focus:outline-none focus:ring">
                <label id="alias-subHeading" class="text-gray-700 md:pl-8 text-xs dark:text-gray-200">At this time (minimum 5 minutes) , Alias will self-destroy.</label>
              </div>

            </div>

            <div class="flex mt-6">
              <label class="inline-flex items-center mt-3" for="noExpiry">
                <input id="noExpiry" name="neverExpire" type="checkbox" class="form-checkbox h-4 w-5" ><span class="ml-2 text-purple-700">Never Expire</span>
            </label>
            </div>

            <div class="flex justify-end mt-6">
              <button type="submit"
                class="px-6 py-2 leading-5 text-white transition-colors duration-200 transform bg-gray-700 rounded-md hover:bg-blue-700 focus:outline-none focus:bg-gray-600">Shortify</button>
            </div>
          </form>
        </section>
      </div>
      <!-- <img alt="feature" class="object-cover object-center h-full w-full" src="https://dummyimage.com/460x500"> -->
      <div
        class="flex flex-col flex-wrap w-7 lg:py-6 -mb-10  lg:w-1/2 md:w-1/2 lg:pl-12 md:px-8 lg:text-left text-center">
        <div class="flex flex-col mb-10 lg:items-start  md:items-baseline   sm:items-baseline  items-center">
          <div class="flex pl-6">
            <svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="3"
              class="text-blue-400 w-6 h-6 flex-shrink-0 mr-4" viewBox="0 0 24 24">
              <path d="M22 11.08V12a10 10 0 11-5.93-9.14"></path>
              <path d="M22 4L12 14.01l-3-3"></path>
            </svg>
            <h2 class="text-white text-xl title-font font-medium mb-3 flex "> Easy Link Shortening</h2>
          </div>
          <div class="flex pl-6 pt-2">
            <svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="3"
              class="text-blue-400 w-6 h-6 flex-shrink-0 mr-4" viewBox="0 0 24 24">
              <path d="M22 11.08V12a10 10 0 11-5.93-9.14"></path>
              <path d="M22 4L12 14.01l-3-3"></path>
            </svg>
            <h2 class="text-white text-xl title-font font-medium mb-3 flex "> Customized ShortURLs</h2>
          </div>
          <div class="flex pl-6 pt-2">
            <svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="3"
              class="text-blue-400 w-6 h-6 flex-shrink-0 mr-4" viewBox="0 0 24 24">
              <path d="M22 11.08V12a10 10 0 11-5.93-9.14"></path>
              <path d="M22 4L12 14.01l-3-3"></path>
            </svg>
            <h2 class="text-white text-xl title-font font-medium mb-3 flex">Anonymous usage</h2>
          </div>
          <div class="flex pl-6 pt-2">
            <svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="3"
              class="text-blue-400 w-6 h-6 flex-shrink-0 mr-4" viewBox="0 0 24 24">
              <path d="M22 11.08V12a10 10 0 11-5.93-9.14"></path>
              <path d="M22 4L12 14.01l-3-3"></path>
            </svg>
            <h2 class="text-white text-xl title-font font-medium mb-3 flex">Expiry Selection</h2>
          </div>
        </div>
      </div>
  </section>

